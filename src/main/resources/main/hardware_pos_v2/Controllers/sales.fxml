<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.hardware_pos_v2.Controllers.viewSalesController">
   <children>
      <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
         <content>
            <TableView fx:id="salesTable">
              <columns>
                <TableColumn fx:id="customerNameColumn" prefWidth="75.0" text="Customer" />
                <TableColumn fx:id="customerPhoneColumn" prefWidth="75.0" text="Phone" />
                  <TableColumn fx:id="itemsColumn" prefWidth="75.0" text="Items" />
                  <TableColumn fx:id="totalAmountColumn" prefWidth="75.0" text="Total" />
                  <TableColumn fx:id="totalPaidColumn" prefWidth="75.0" text="Paid" />
                  <TableColumn fx:id="changeColumn" prefWidth="75.0" text="Change" />
                  <TableColumn fx:id="servedByColumn" prefWidth="75.0" text="Server" />
                  <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </content>
      </ScrollPane>
   </children>
</VBox>
