<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@main-menu.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.hardware_pos_v2.Controllers.mainMenuController">
   <top>
      <VBox prefHeight="95.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="header" alignment="CENTER" prefHeight="99.0" prefWidth="800.0" stylesheets="@main-menu.css">
               <children>
                  <Label fx:id="heading" alignment="CENTER" maxWidth="Infinity" prefHeight="49.0" prefWidth="117.0" stylesheets="@main-menu.css" text="MAIN MENU" />
               </children>
            </HBox>
            <HBox fx:id="navigationBar" alignment="CENTER" prefHeight="100.0" prefWidth="800.0" spacing="10.0">
               <children>
                  <Button fx:id="homeButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#sellScene" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="HOME" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="productsButton" maxWidth="Infinity" mnemonicParsing="false" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="PRODUCTS" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="salesButton" maxWidth="Infinity" mnemonicParsing="false" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="SALES" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="restockInventoryButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#addToInventory" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="RESTOCK INVENTORY" wrapText="true" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="logoutButton" maxWidth="Infinity" mnemonicParsing="false" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="LOGOUT" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox fx:id="contentArea" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="inputArea" HBox.hgrow="ALWAYS">
                     <children>
                        <Label prefHeight="50.0" styleClass="sectionHeaders" stylesheets="@main-menu.css" text="CUSTOMER'S DETAILS" />
                        <Label prefHeight="50.0" text="NAME:" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="customerNameInput" prefHeight="50.0" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                        <Label prefHeight="50.0" text="PHONE:" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="phoneInput" prefHeight="50.0" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                        <Label prefHeight="50.0" styleClass="sectionHeaders" stylesheets="@main-menu.css" text="ITEM ENTRY" />
                        <Label fx:id="feedBackLabel" prefHeight="50.0" prefWidth="229.0" />
                        <Label prefHeight="50.0" text="NAME:" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="itemNameInput" prefHeight="50.0" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                        <Label prefHeight="50.0" text="QUANTITY:">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="quantityInput" prefHeight="50.0" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#createItem" prefHeight="50.0" prefWidth="90.0" styleClass="inputButtons" text="Add" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></Button>
                        <Label prefHeight="50.0" styleClass="sectionHeaders" stylesheets="@main-menu.css" text="SERVICE" />
                        <Label prefHeight="50.0" text="NAME:" />
                        <TextField fx:id="serverNameInput" prefHeight="50.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                        <Label prefHeight="50.0" text="DATE:" />
                        <TextField fx:id="dateOfPurchaseOutput" prefHeight="50.0" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                        <Button fx:id="submitButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="90.0" styleClass="inputButtons" text="Submit">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin></Button>
                        <Label prefHeight="50.0" styleClass="sectionHeaders" text="Payments" />
                        <Label prefHeight="50.0" text="Debts" />
                        <TextField fx:id="debtsButton" prefHeight="50.0" />
                        <Label prefHeight="50.0" text="Total Payments" />
                        <TextField fx:id="totalPaymentsOutput" prefHeight="50.0" />
                        <Button fx:id="sellButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="90.0" styleClass="inputButtons" text="Sell">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox prefHeight="505.0" prefWidth="400.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TableView fx:id="purchaseTable" prefHeight="408.0" prefWidth="465.0" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="itemsColumn" prefWidth="75.0" text="Item" />
                            <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="Quantity" />
                              <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Price" />
                              <TableColumn fx:id="totalPriceColumn" prefWidth="105.0" text="Total Price" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
