<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@main-menu.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.hardware_pos_v2.Controllers.mainMenuController">
   <top>
      <VBox prefHeight="95.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="header" alignment="CENTER" prefHeight="99.0" prefWidth="800.0" stylesheets="@main-menu.css">
               <children>
                  <Label fx:id="heading" alignment="CENTER" maxWidth="Infinity" prefHeight="49.0" prefWidth="117.0" stylesheets="@main-menu.css" text="MAIN MENU" />
               </children>
            </HBox>
            <HBox fx:id="navigationBar" alignment="CENTER" prefHeight="100.0" prefWidth="800.0" spacing="10.0">
               <children>
                  <Button fx:id="homeButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#sellScene" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="HOME" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="productsButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#viewInventory" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="PRODUCTS" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="salesButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#viewSales" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="SALES" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="restockInventoryButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#addToInventory" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="RESTOCK INVENTORY" wrapText="true" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="exitButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#setLogoutButton" prefHeight="40.0" styleClass="buttons" stylesheets="@main-menu.css" text="EXIT" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox fx:id="contentArea" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
